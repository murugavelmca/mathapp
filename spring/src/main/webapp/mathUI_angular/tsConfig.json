{
    "compilerOptions": {
      "baseUrl": "",
      "target": "es5",
      "module": "es2015",
      "moduleResolution": "node",
      "declaration": false,
      "noImplicitAny": false,
      "noUnusedLocals": true,
      "sourceMap": false,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "outDir": "./build",
